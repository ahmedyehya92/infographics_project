<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev3raby.infographic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".App.AppController"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/icon_lunch"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/Base.Theme.DesignDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.HomeActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Base.Theme.DesignDemo">
            >
        </activity>
        <activity
            android:name=".Activities.CatgInfographicsActivity"
            android:theme="@style/Base.Theme.DesignDemo" />
        <activity
            android:name=".Activities.InfographicActivity"

            android:theme="@style/Base.Theme.DesignDemo" />
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.FollowinActivity"
            android:theme="@style/Base.Theme.DesignDemo"

            ></activity>
    </application>

</manifest>