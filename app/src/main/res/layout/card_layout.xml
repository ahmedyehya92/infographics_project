<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"

    >


    <!--   Recycler View Item Row   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/im_infographic"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="340dp"
            android:scaleType="centerCrop"
            />





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im_source_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/im_source_icon"
            android:layout_toRightOf="@id/im_source_icon"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_source_name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"




                />
            <TextView
                android:id="@+id/tv_infographic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:id="@+id/tx_fav_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btnComment"
                    android:text="21"
                    android:textSize="10sp"


                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_favorite_black_24dp">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                >
                <TextView
                    android:id="@+id/tx_seen_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btnComment"
                    android:text="100"
                    android:textSize="10sp"


                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_visibility_black_24dp">
                </ImageView>

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/vertical_divider"
            android:layout_centerVertical="true"

            ></View>
    </LinearLayout>
</android.support.v7.widget.CardView>


